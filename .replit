# Piper Dispatch Special Kit - Trae Configuration
# Privacy-first implementation engine with neurodiversity optimization

run = "npm run dev"
entrypoint = "pages/index.js"

[nix]
channel = "stable-22_11"

[env]
NODE_ENV = "development"
PRIVACY_MODE = "strict"
DATA_PURGE_INTERVAL = "15"
QUANTUM_ENCRYPTION = "enabled"
NEURODIVERSITY_OPTIMIZATION = "true"
GDPR_PLUS_COMPLIANCE = "enabled"

[gitHubImport]
requiredFiles = [".replit", "package.json", "README.md"]

[deployment]
run = ["npm", "run", "build"]
deploymentTarget = "cloudrun"

[packager]
language = "nodejs"

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = false

[languages.javascript]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx}"

[languages.javascript.languageServer]
start = "typescript-language-server --stdio"

[languages.css]
pattern = "**/*.css"

[languages.css.languageServer]
start = "vscode-css-language-server --stdio"

[languages.html]
pattern = "**/*.html"

[languages.html.languageServer]
start = "vscode-html-language-server --stdio"

# Privacy-first development settings
[privacy]
dataRetention = false
trackingDisabled = true
analyticsDisabled = true
localProcessingOnly = true

# Neurodiversity optimization settings
[accessibility]
adhd_friendly = true
dyslexia_optimized = true
asd_structured = true
high_contrast = true
reduced_motion = true
screen_reader_support = true

# Security settings
[security]
quantum_resistant = true
encryption_enabled = true
secure_headers = true
csp_enabled = true

# Development tools
[tools]
[tools.prettier]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx,*.css,*.html,*.json,*.md}"

[tools.eslint]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx}"

# Auto-sync configuration
[github]
auto_sync = true
branch_protection = true
security_scanning = true
privacy_audit = true

# Build configuration
[build]
command = "npm run build"
outputDir = ".next"

# Development server configuration
[dev]
command = "npm run dev"
port = 3000
host = "0.0.0.0"

# Testing configuration
[test]
command = "npm test"
coverage = true
accessibility_tests = true
privacy_tests = true

# Deployment configuration
[deploy]
command = "make deploy"
health_check = true
security_scan = true
privacy_audit = true